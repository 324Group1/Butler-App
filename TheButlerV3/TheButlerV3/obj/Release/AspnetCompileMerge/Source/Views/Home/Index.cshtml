@model TheButlerV3.Models.recipeViewModel

@{
    ViewBag.Title = "Home Page";
}



<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Stylessh1.css" rel='stylesheet' type='text/css' />

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
</head>
<body>

    <div class="homepg-image">
        <div class="hptitle-text">
            <h1 style="font-size:40px">Welcome to The Butler</h1>
        </div>
    </div>
    <h2 class="recipe_head">Recipes</h2>
    <div class="container">  
        <br />  
        <div style="width:90%; margin:0 auto;">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <img src="@Model.recipe_photo" alt="Italian Trulli">
                        </th>
                        <th>@Model.Recipe_Name</th>
                    </tr>
                </thead>
            </table>
            @if (Model != null)
    {
            <ul class="list-group">
                <li class="list-group-item ">Recipe</li>

                <li class="list-group-item">@Model.recipe_photo</li>
                <li class="list-group-item">@Model.Recipe_Name</li >          
            </ul>
}
        </div>  
    </div>  
</body>
</html>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


